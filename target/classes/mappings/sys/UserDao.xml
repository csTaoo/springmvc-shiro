<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shitao.sys.dao.UserDao">
	<select id="getUserByName" parameterType="java.lang.String" resultType="com.shitao.sys.entity.User">
		
		SELECT * FROM sys_user WHERE username = #{username}
	
	</select>
	
	<insert id="registerUser" parameterType="com.shitao.sys.entity.User">
		
		INSERT INTO sys_user(id,username,password,realname) VALUES (#{id},#{username},#{password},#{realname})
	</insert>
</mapper>